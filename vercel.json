{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build && cd ..",
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "client/build/**",
          "server/**",
          "package.json",
          "package-lock.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
