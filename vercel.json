{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build",
  "framework": "express",
  "nodeVersion": "18.x",
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "client/build/**",
        "excludeFiles": "node_modules/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api.js"
    }
  ]
}
